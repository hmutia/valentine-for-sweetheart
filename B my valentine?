<body>

    <div id="container">
        <div id="quiz">
            <img class="couple-photo" src="https://images.unsplash.com/photo-1518199266791-5375a83190b7?q=80&w=500&auto=format&fit=crop" alt="Us">
            <h1 id="question">Will you be my valentine?</h1>
            <div class="buttons">
                <button id="yesBtn">YES</button>
                <button id="noBtn">NO</button>
            </div>
        </div>

        <div id="message" class="success-msg">
            <h2>i love u sm sweetheart ‚ù§Ô∏è</h2>
            <p style="font-size: 1.5rem; margin-top: 10px;">Best Valentine's ever!</p>
        </div>
    </div>

    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const quiz = document.getElementById('quiz');
        const message = document.getElementById('message');

        const noTexts = [
            "Are you sure?",
            "baby u sure",
            "babyyyyyy",
            "just say yes baby",
            "baby pleaseeee"
        ];

        let noCount = 0;
        let yesScale = 1;

        // Function to create falling hearts
        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart-fall');
            heart.innerHTML = '‚ù§Ô∏è';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = Math.random() * 3 + 2 + 's';
            heart.style.opacity = Math.random();
            heart.style.fontSize = Math.random() * 20 + 10 + 'px';
            
            document.body.appendChild(heart);

            setTimeout(() => {
                heart.remove();
            }, 5000);
        }

        // Start creating hearts immediately
        setInterval(createHeart, 300);

        noBtn.addEventListener('click', () => {
            // Update the text on the NO button
            if (noCount < noTexts.length) {
                noBtn.innerText = noTexts[noCount];
            } else {
                noBtn.innerText = "Please? ü•∫";
            }
            
            // Make the YES button bigger using transform scale
            yesScale += 0.4;
            yesBtn.style.transform = `scale(${yesScale})`;
            
            // Slightly move the NO button away
            noCount++;
        });

        yesBtn.addEventListener('click', () => {
            quiz.style.display = 'none';
            message.style.display = 'block';
            document.body.style.backgroundColor = '#ffcdd2';
            
            // Increase heart frequency on success!
            setInterval(createHeart, 50);
        });
    </script>
</body>
